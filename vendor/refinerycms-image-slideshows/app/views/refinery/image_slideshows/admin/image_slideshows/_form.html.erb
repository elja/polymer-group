<%= form_for [refinery, :image_slideshows_admin, @image_slideshow] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @image_slideshow,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>
  </div>

  <div class='field'>
    <%= f.label :height -%>
    <%= f.text_field :height -%>
  </div>

  <div class='field'>
    <%= f.label :width -%>
    <%= f.text_field :width -%>
  </div>

  <div class='field'>
    <%= f.label :js_config, 'JavaScript Config' -%>
    <%= f.text_area :js_config, :cols => 80, :rows => 20  -%>
  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.image_slideshows.admin.image_slideshows.image_slideshow'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @image_slideshow.title) %>
<% end -%>

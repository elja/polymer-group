<%= content_for :breadcrumbs do %>
    <div class="breadcrumbs margin-bottom-40">
      <%= render 'refinery/breadcrumbs' %>
    </div>
<% end %>

<div class="container">
    <div class="row margin-bottom-20">
      <div class="headline"><h2><%= @page.title %></h2></div>

      <div class="col-md-6 md-margin-bottom-40">
        <%= raw @page.content_for(:body) %>
      </div>

      <div class="col-md-6">
        <%= raw @page.content_for(:slideshow) %>
      </div>
    </div>

      <div class="row">
        <div class="col-md-12">
          <%= raw @page.content_for(:bottom_body) %>
        </div>
      </div>

    <div class="row">
      <% if page_part = @page.part_with_title(:body) %>
          <% page_part.snippets.each do |snippet| %>
              <%= raw snippet.body %>
          <% end %>
      <% end %>
    </div>
</div>


